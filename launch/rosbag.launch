<?xml version="1.0"?>
<!-- launch rosbag and command -->
<launch>
	<rosparam command="load" 	file="$(find panda_controllers)/config/panda_controllers_default.yaml" />
 
    <!-- command and flag -->
    <arg name="command_node" default="true" />
    <arg name="flag_node" default="true" />

    <!-- rosbag -->
    <arg name="topics"      default="/backstepping_controller/current_config /backstepping_controller/logging /joint_states /backstepping_controller/command"/>
    <arg name="bag_path"    default="$(find panda_controllers)/rosbag"/>
    <arg name="bag_name"    default="$(arg bag_path)/lab0920"/>
    <arg name="duration"    default="125"/>
    
    <!-- rosbag file name -->
    <arg name="gainLambda"  default="L(100.0_1.0)"/>
    <arg name="gainR"       default="Ri1(1_0.1_0.01)"/>
    <arg name="gainKd"      default="Kd(10.0)"/>
    <arg name="adapt"       default="true"/>
    <arg name="traj_type"   default="liss"/> <!-- liss - circ - minjerk -->
    <arg name="param_off"   default="p2"/>  <!-- p0, p2, p5, p10, p20 -->
    <arg name="gain"        default="$(arg gainLambda)_$(arg gainR)_$(arg gainKd)"/>
    
   
    <node pkg="rosbag" type="record" name="bag_recorder" output="screen" 
        args="--duration=$(arg duration) -O $(arg bag_name)_$(arg traj_type)_$(arg adapt)_$(arg gain)_$(arg param_off) $(arg topics)">
    </node>

    <node pkg="panda_controllers" type="adaptiveFlag_node" name="adaptiveFlag_name" output="screen" if="$(arg flag_node)" />

    <include file="$(find panda_controllers)/launch/command.launch" if="$(arg command_node)" />

</launch>
